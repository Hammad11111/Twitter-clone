<!DOCTYPE html>
<html>
  <head>
    <title>Twitterdemo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

   
    

    

    
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel: 'stylesheet' %>
    <%= stylesheet_link_tag "application", media: 'all', "data-turbo-track": "reload" %> 
    
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>


    

    

 






    

  </head>

  <body>
      <% if flash[:notice]%>
        <div class="notification is-primary global-notification">
          <p class="notice"><%= flash[:notice] %></p>
        </div>
      <%end%>
      
      <% if flash[:alert]%>
        <div class="notification is-danger global-notification">
          <p class="alert"><%= flash[:alert] %></p>
        </div>
      <%end%>





    <nav class="navbar is-info">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title has-text-white" style="padding-left: 15px;">Twitter</h1> <!-- Make title white and add padding -->
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="field is-grouped"   style="padding: 9px 15px;"> 
          
              <p class="control">
                <%= link_to 'New Tweeet', root_path, class: 'button is-info is-inverted has-text-white' %>
              </p>
              <% if user_signed_in?%>
              <p class="control">
                <%= link_to current_user.name, edit_user_registration_path, class: 'button is-info'%>
                
              </p>
              <p>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'button is-info'%>
              </p>
              <% else %> 

              <p class="control" style="padding: 10px 15px;"> 
                <%= link_to 'Sign Up', new_user_registration_path, class: 'button is-info' %>
              </p>
              <p class="control" style="padding: 10px 15px;"> 
                <%= link_to 'Sign In', new_user_session_path, class: 'button is-info' %>
              </p>
            <%end%>

          </div>
        </div>
      </div>
    </nav>



    <%= yield %>
  </body>
</html>
