<div class="section">
  <div class="container"> <!-- Corrected the missing equals sign -->
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-little" style="margin-top: -25px; font-size: 1.5rem;">Edit User</h2>
        <br/>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), method: :put) do |f| %>
          <%= f.error_notification %>

          <!-- Name Field -->
          <div class="field" style=" margin-top: -10px; ">
            <div class="control">
              <%= f.input :name, required: true, autofocus: true, input_html: { class: 'input', style: 'font-size: 0.9rem;' }, wrapper: false, label_html: {class: 'label', style: 'font-size: 0.9rem;'} %>
            </div>
          </div>
          <br/>

          <!-- Username Field -->
          <div class="field" style="margin-top: -10px;">
            <div class="control">
              <%= f.input :username, required: true, input_html: { class: 'input', style: 'font-size: 0.9rem;' }, wrapper: false, label_html: {class: 'label', style: 'font-size: 0.9rem;'} %>
            </div>
          </div>
          <br/>

          <!-- Email Field -->
          <div class="field" style="margin-top: -10px;">
            <div class="control">
              <%= f.input :email, required: true, input_html: { class: 'input', style: 'font-size: 0.9rem;' }, wrapper: false, label_html: {class: 'label', style: 'font-size: 0.9rem;'} %>
            </div>
          </div>
          <br/>

          <!-- New Password Field -->
          <div class="field" style="margin-top: -10px;">
            <div class="control">
              <%= f.input :password, input_html: { class: 'input', style: 'font-size: 0.9rem;' }, wrapper: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label_html: { class: 'label', style: 'font-size: 0.9rem;' } %>
            </div>
          </div>  
          <br/>

          <!-- Password Confirmation Field -->
          <div class="field" style="margin-top: -10px;">
            <div class="control">
              <%= f.input :password_confirmation, input_html: { class: 'input', style: 'font-size: 0.9rem;' }, wrapper: false, label_html: { class: 'label', style: 'font-size: 0.9rem;' } %>
            </div>
          </div>
          <br/>

          <!-- Current Password Field (Required for Updating) -->
          <div class="field" style="margin-top: -10px;">
            <div class="control">
              <%= f.input :current_password, required: true, input_html: { class: 'input', style: 'font-size: 0.9rem;' }, wrapper: false, label_html: { class: 'label', style: 'font-size: 0.9rem;' } %>
            </div>
          </div>
          <br/>

          <!-- Submit Button -->
          <div class="field" style="margin-top: -10px;">
            <div class="control">
              <%= f.button :submit, "Update", class: 'button is-info is-small', style: 'font-size: 0.9rem;' %>
            </div>
          </div> 
          
          <div class="field" style="margin-top: 10px;">
            <div class="control">
               <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'button is-info is-small', style: 'font-size: 0.9rem;'%>
            </div>
          </div>  
        <% end %>
        

       
          <%= render "devise/shared/links" %>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
