<div class="section">
  <div class"container">
    <div class="columns is-centered">
      <div class="column is-4">
      
      <h2 class="title is-little" style="margin-top: -25px; font-size: 1.5rem;">Sign Up</h2>
      <br/>
      
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <%= f.error_notification %>
        
        <div class="field" style=" margin-top: -10px; ">
          <div class="control">
            <%= f.input :name, required: true, autofocus: true, input_html: { class: 'input', style: 'font-size: 0.9rem;' }, wrapper: false, label_html: {class: 'label', style: 'font-size: 0.9rem;'} %>
          </div>
        </div>
        <br/>
      
        <div class="field" style="margin-top: -10px;">
          <div class="control">
            <%= f.input :username, required: true, input_html: { class: 'input', style: 'font-size: 0.9rem;' }, wrapper: false, label_html: {class: 'label', style: 'font-size: 0.9rem;'} %>
          </div>
        </div>
        <br/>
        
        <div class="field" style="margin-top: -10px;">
          <div class="control">
            <%= f.input :email, required: true, input_html: { class: 'input', style: 'font-size: 0.9rem;' }, wrapper: false, label_html: {class: 'label', style: 'font-size: 0.9rem;'} %>
          </div>
        </div>
        <br/>
          
        <div class="field" style="margin-top: -10px;">
          <div class="control">
            <%= f.input :password, required: true, input_html: { class: 'input', style: 'font-size: 0.9rem;' }, wrapper: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label_html: { class: 'label', style: 'font-size: 0.9rem;' } %>
          </div>
        </div>  
        <br/>
          
        <div class="field" style="margin-top: -10px;">
          <div class="control">
            <%= f.input :password_confirmation, required: true, input_html: { class: 'input', style: 'font-size: 0.9rem;' }, wrapper: false, label_html: { class: 'label', style: 'font-size: 0.9rem;' } %>
          </div>
        </div>
        
        <br/>
      
        <div class="field" style="margin-top: -10px;">
          <div class="control">
            <%= f.button :submit, "Sign up", class: 'button is-info is-small', style: 'font-size: 0.9rem;' %>
          </div>
        </div>  
        
      <% end %>
      
      <br/>
      
      <%= render "devise/shared/links" %>
      
      
    </div>
  </div>
</div>