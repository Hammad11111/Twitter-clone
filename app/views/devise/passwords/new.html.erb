<div class="section">
  <div class"container">
    <div class="columns is-centered">
      <div class="column is-4">


            
            <h2 class="title is-little" style="margin-top: -25px; font-size: 1.5rem;">Forget your password?</h2>
            

            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              

              

              <br/>

              <div class="field margin-top: -10px;">
                <div class="control">
                  <%= f.input :email, required: true, autofocus: true,  input_html: { autocomplete: "email ", class: "input", style: "font-size: 0.9rem;" }, wrapper: false, label_html: {class: "label", style:"font-size: 0.9rem;"}%>
                </div>
              </div>
              <br/>
              

              <div class="field margin-top: 10px;">
                <div class="control">
                  <%= f.button :submit, "Send me reset password instructions", class: 'button is-info' %>
                </div>
              </div>
              <br/>

            <% end %>

            <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
