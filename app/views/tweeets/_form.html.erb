<%= simple_form_for(@tweeet) do |f|%>

    <%= f.error_notification %>
    <div class="field">
      <div class="control ">
        <%= f.input :tweeet, as: :text, label: "Tweet about it", input_html: { class: "textarea is-medium", placeholder: 'Compose a new tweet', autofocus: true },  wrapper: false, label_html: { class: 'label'} %> 
      </div>
      <br/>
      <%= f.button :submit, class: 'button is-info' %>

    </div>
    
    

    
<%end%>


